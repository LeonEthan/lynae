{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "references": [
    { "path": "./packages/storage" },
    { "path": "./packages/agent-core" },
    { "path": "./packages/toolkit" },
    { "path": "./packages/policy-engine" },
    { "path": "./packages/runtime-adapters/claude" },
    { "path": "./apps/desktop" }
  ]
}
